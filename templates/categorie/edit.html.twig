{% extends 'base.html.twig' %}

{% block title %}Modifier la Catégorie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-color: #ECF1EDFF !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-3 mb-3">Modifier la Catégorie</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.couleur) }}
                    {{ form_widget(form.couleur, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.recettes, 'Recettes associées', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.recettes, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">{{ button_label }}</button>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
