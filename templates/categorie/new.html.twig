{% extends 'base.html.twig' %}

{% block title %}New Categorie{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-5">Créer une nouvelle catégorie</h1>
                {{ form_start(form, {'attr': {'class': 'form', 'style': 'margin: 0 auto;'}}) }}
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom de la catégorie', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.image, 'Image de la catégorie', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.couleur, 'Couleur de la catégorie', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.couleur, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.recettes, 'Recettes associées', {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.recettes, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
